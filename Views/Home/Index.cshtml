@model IndexMoviesViewModel
 

 <main class="main-menu">
      @for(int i = 0; i < @Model.Movies.Count; i++)
    {
        <div class="main-menu-first" style="background-image: url(@Model.Movies[i].MoviePreviewPath)">
        <div class="main-menu-first-opacity">
          <div class="left">
            <a href="@Model.Movies[i].MovieTrailerPath"
              ><svg class="main-menu-first-uper-ico">
                <use href="./images/symbol.svg#icon-play"></use>
              </svg>
              <div class="main-menu-first-uper-text">Дивитися трейлер</div>
            </a>
          </div>
          <div class="right">
            <a href="#"
              ><svg class="main-menu-second-uper-ico">
                <use href="./images/symbol.svg#icon-information"></use>
              </svg>
              <div class="main-menu-second-uper-text">Інформація про фільм</div>
            </a>
          </div>
          <svg class="main-menu-category-age">
            <use href="./images/symbol.svg#icon-age-limit-@Model.Movies[i].AgeRestriction"></use>
          </svg>
          <div class="main-menu-category">Топ продаж</div>
          <a href="" class="main-menu-bottom-text">@Model.Movies[i].NameMovie</a>
        </div>
      </div>
    }





    </main>

