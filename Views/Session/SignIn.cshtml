@*Here Login*@

@model User
@{
    Layout = "_AufLayout";
}

    <div class="sign-in-main">
      <h1>sign-in</h1>
      <form method="post">
        <div class="sign-in-main-txt">
          <input type="email" type="text" required />
          <span></span>
          <label>E-mail</label>
        </div>

        <div class="sign-in-main-txt">
          <input minlength="8" type="password" required />
          <span></span>
          <label>Password</label>
        </div>

        <div class="pass">
          <a asp-action="ForgotPassword" asp-controller="Session"> Forgot Password?</a>
        </div>
        <input type="submit" value="Login" />
        <div class="signup_link">
          Not a member? <a asp-action="SignUp" asp-controller="Register">Signup</a>
        </div>
      </form>
    </div>

